# Butcher WileyMUD
if [ -f /home/wiley/wiley.pid ]; then
        WILEYPID=`ps -axw | grep wileymud | grep -v grep | awk '{print $1}'`
        if [ -n "$WILEYPID" ]; then
                kill -USR1 $WILEYPID
                sleep 5
        fi
        unset WILEYPID
        kill -TERM `cat /home/wiley/wiley.pid`
        rm -f /home/wiley/wiley.pid
fi
