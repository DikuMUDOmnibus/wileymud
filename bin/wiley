#!/bin/bash
# 42 is our magic number for not rebooting,
# otherwise we assume it crashed or we said reboot.

cd /mud/wiley/mud/bin
while [ -x ./wileymud ]; do
  LOG=`/bin/date "+../lib/log/runlog.%y%m%d-%H%M%S"`
  touch $LOG
  chown wiley.divine $LOG
  chmod 640 $LOG
  ./wileymud 3000 >$LOG 2>&1 </dev/null
  STATUS=$?
  gzip -9 $LOG
  chown wiley.divine $LOG.gz
  chmod 640 $LOG.gz
  sync
  if [ $STATUS = 42 ]; then
    exit
  fi
  sleep 240
done
